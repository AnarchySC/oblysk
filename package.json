{
  "name": "oblysk",
  "version": "2.0.0",
  "description": "Cross-platform console paste tool for Windows, Linux, and macOS",
  "main": "main.js",
  "author": {
    "name": "Anarchy Games",
    "email": "contact@anarchygames.net"
  },
  "homepage": "https://anarchygames.net",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --windows nsis --windows portable",
    "build-linux": "electron-builder --linux AppImage deb",
    "build-mac": "electron-builder --mac dmg",
    "build-all": "electron-builder --windows nsis --windows portable --linux AppImage deb --mac dmg",
    "dist": "npm run build-all",
    "pack": "electron-builder --dir",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build-all"
  },
  "build": {
    "appId": "com.anarchygames.oblysk",
    "productName": "Oblysk",
    "copyright": "Copyright Â© 2025 Anarchy Games",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json",
      "icon.ico",
      "icon.png",
      "tray-icon.png",
      "README.md"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-Windows-${arch}.${ext}",
      "publisherName": "Anarchy Games",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "tray-icon.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}-Linux-${arch}.${ext}",
      "synopsis": "Console paste tool",
      "description": "Cross-platform console paste tool with clipboard management, encryption, and global hotkeys"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "tray-icon.png",
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "Oblysk-Portable-Windows.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Oblysk Console Paste Tool",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "displayLanguageSelector": false,
      "installerLanguages": ["en_US"],
      "license": null,
      "warningsAsErrors": false
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  }
}
